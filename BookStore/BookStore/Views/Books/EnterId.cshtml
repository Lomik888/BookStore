@model BookViewModel

@{
    ViewData["Title"] = "Find Book by Id";
}

<h2>Find Book by Id</h2>

<form asp-controller="Books" asp-action="Details" method="get">
    <label for="idInput">Enter Book Id:</label>
    <input type="number" id="idInput" name="id" value="@ViewData["EnteredId"]" required/>
    <button type="submit">Find Book</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
else if (Model != null)
{
    <div style="margin-top:20px;">
        <h3>Book Details:</h3>
        <p>
            <strong>Title:</strong> @Model.Title
        </p>
        <p>
            <strong>Author:</strong> @Model.Author
        </p>
        <p>
            <strong>Author:</strong> @Model.PublishedYear
        </p>
    </div>
}